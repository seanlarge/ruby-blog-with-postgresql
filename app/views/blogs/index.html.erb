<h1>Beer Blog</h1>
<%= render 'search_form' %>
<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Published</th>
      <th>Draft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.subject %></td>
        <td><%= blog.body %></td>
        <td><%= blog.published %></td>
        <td><%= blog.draft %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
<p>Get your drink on responsibly</p>


